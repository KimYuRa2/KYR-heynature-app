<div style="padding:200px 80px; ">
    <ul id="kaTop">
        <li onclick="getShowCT()"><a class="ka" id="ka" href="javascript:void(0);"></a></li>
        <li><a class="top" id="top" href="javascript:void(0);"></a></li>
    </ul>

    <h2 style="text-align : center; padding: 30px 0;">#<%=row.qnum%>. 문의내용</h2>
    
        <table class="inquiry_table" style="border:5px solid #444444" width="100%" height="200" cellspacing="5">
            <tbody>
                <tr align="center" bgcolor="white" style="border: 1px solid #444444;">
                    <td style="border: 1px solid #444444;vertical-align: middle;">문의유형</td>
                    <td style="vertical-align: middle;"><%=row.cate%></td>
                </tr>
                <tr align="center" bgcolor="white" style="border: 1px solid #444444;">
                    <td style="border: 1px solid #444444;vertical-align: middle;">이름</td>
                    <td style="vertical-align: middle;"><%=row.name%></td>
                </tr>
                <tr align="center" bgcolor="white" style="border: 1px solid #444444;">
                    <td style="border: 1px solid #444444;vertical-align: middle;">휴대폰</td>
                    <td style="vertical-align: middle;"><%=row.phoneNum%></td>
                </tr>
                <tr align="center" bgcolor="white" style="border: 1px solid #444444;">
                    <td style="border: 1px solid #444444;vertical-align: middle;">이메일</td>
                    <td style="vertical-align: middle;"><%=row.email%></td>
                </tr>
                <tr align="center" bgcolor="white" style="border: 1px solid #444444;">
                    <td style="border: 1px solid #444444;vertical-align: middle;">문의제목</td>
                    <td style="vertical-align: middle;"><%=row.q_title%></td>
                </tr>
                <tr align="center" bgcolor="white" style="border: 1px solid #444444;">
                    <td style="border: 1px solid #444444;vertical-align: middle;">문의내용</td>
                    <td style="vertical-align: middle;"><%=row.q_content%></td>
                </tr>
                <%if(row.image !== null){%>
                <tr align="center" bgcolor="white" style="border: 1px solid #444444;">
                    <td style="border: 1px solid #444444;vertical-align: middle;">첨부파일</td>
                    <td style="vertical-align: middle;">
                        <img src="<%= row.image%>" alt="문의이미지" style="width:300px;height:300px;" />
                    </td>
                </tr>
                <%}%>
            </tbody>
        </table>



        <div style="padding-top:50px;">
            <form action="/mail" name="q_inquiry_send" method="post">
                
                <h2 style="text-align : center; padding: 30px 0;">답변하기</h2>

                <table style="border:5px solid #444444" width="100%" height="200" cellspacing="5">
                    <tbody>
                        <tr align="center" bgcolor="white" style="border: 1px solid #444444;">
                            <td style="border: 1px solid #444444;vertical-align: middle;">받는사람</td>
                            <td><input type="text" name="email" value="<%=row.email%>" style="border:none;box-sizing:border-box;max-width:100%;min-width:100%;height:100%" readonly></td>
                        </tr>
                        
                        <tr align="center" bgcolor="white" style="border: 1px solid #444444;">
                            <td style="border: 1px solid #444444;vertical-align: middle;">제목</td>
                            <td><input type="text" name="mailtitle"  value="<%=row.name%>님, 안녕하세요. 헤이네이철 문의 답변입니다." style="border:none;box-sizing:border-box;max-width:100%;min-width:100%;height:100%" ></td>
                        </tr>
                        <tr align="center" bgcolor="white" style="border: 1px solid #444444; ">
                            <td style="border: 1px solid #444444;vertical-align: middle;">내용</td>
                            <td><textarea name="mailcontent" style="border:none;box-sizing:border-box;max-width:100%;min-width:100%;height:100%" ></textarea></td>
                        </tr>
                    </tbody>
                </table>

                <!-- 답변하기 버튼 -->
                <div class="btn_center_box">
                    <button  type="button" id="q_btn" onclick="q_inquiryform_check();" class="btn_order_buy order-buy" style="font-size:23px !important; width:40%;">답변하기</button>
                </div>

            </form>
        </div>
    </div>